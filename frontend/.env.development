# Persian Legal AI Frontend Environment Variables - Development
# متغیرهای محیطی فرانت‌اند هوش مصنوعی حقوقی فارسی - توسعه

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_REAL_API_URL=http://localhost:8000/api/real
VITE_WS_URL=ws://localhost:8000/ws

# Environment
VITE_NODE_ENV=development

# Application Configuration
VITE_APP_TITLE=Persian Legal AI System
VITE_APP_VERSION=3.0.0

# Feature Flags
VITE_ENABLE_REAL_DATA=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_DEBUG=true

# Persian Configuration
VITE_LOCALE=fa
VITE_RTL_ENABLED=true
VITE_PERSIAN_FONT=Vazir