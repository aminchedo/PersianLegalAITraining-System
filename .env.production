# PRODUCTION ENVIRONMENT - REAL DATA ONLY
VITE_REAL_API_URL=https://api.persian-legal-ai.com/api/real
DATABASE_URL=postgresql://prod_user:prod_password@production-db:5432/persian_legal_ai_prod
SECRET_KEY=your-production-secret-key-change-in-production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=production-db
DB_PORT=5432
DB_NAME=persian_legal_ai_prod
DB_USER=prod_user
DB_PASSWORD=prod_password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=https://persian-legal-ai.com,https://www.persian-legal-ai.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60